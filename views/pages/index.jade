	body.landing
		#mainbody
			.landingbox
				.slogan
					h1.logo Copicat
					.clear
					.feature
						p CURATED
						.clear
						p STYLES & TRENDS

					.clear
					h1 Pay for your products
					.clear
					h1 & not their brand
					.clear
					h1 names.
					.clear
					p We stock a curated list of the best styles at the best prices sourced all over the world. Pick your shop to get started:
					.clear
					ul.gotoshop
						li.nav-btn
							a(href="man", onClick="signin('man')")
								img(class="maleshop")
						li.nav-btn
							a(href="woman", onClick="signin('woman')")
								img(class="femaleshop")
					.placeholder



		script(type='text/javascript').

			$(document).ready(function(){
				$("li.nav-btn img").hover(function(){
					if ($(this).hasClass('maleshop')) {
						$('body').css("background-color", "rgb(0, 181, 236)");
						$('.selection > p').animate({opacity : 1}, 200);
					} else {
						$('body').css("background-color", "rgb(234, 76, 137)");
						$('.selection > p').animate({opacity : 1}, 200);
					}
				}, function(){
					$('body').css("background-color", "rgb(236,235,240)");
				});
			});
